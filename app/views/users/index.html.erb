<img alt="Rails logo" height = "80" src="/assets/elearning-logo.png" />
<% provide(:title, 'All users') %>
<h1>All Users</h1>
<table class="table table-condensed" style="width:50%" align = "center">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Profile</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= gravatar_for (user) %></td>
        <td><%= link_to user.name, user %></td>
        <td><% if current_user.admin? && !current_user?(user) %>
        <%= link_to "delete", user, method: :delete, data: {confirm: "You sure?"} %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>